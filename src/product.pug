    .page-product

        .container

            // PRODUCT INFO
            .product__container

                .product__img
                        img(src="assets/images/product.png", alt="img")

                .product

                    h4.product__title Фрезерованный "петух" для крепления заднего переключателя к раме F-001

                    .product__img-mobile
                        img(src="assets/images/product.png", alt="img")

                    .product__cost <b>10 000 000 ₽</b> <span>/шт</span>

                    .product__action
                        button.product__btn
                            .btn-icon
                                img(src="assets/images/compare-icon-red.svg", alt="icon")
                            span Сравнить
                        button.product__btn
                            .btn-icon
                                i.far.fa-heart
                            span В избранное

                    .product__availability
                        p Наличие:

                        ul
                            li На складе
                            li.unavailable м.Сокольники
                            li м.Беломорская
                            li м.Водный Стадион

                    .product__char
                        .product__char-row
                            p Артикул
                            p 1245678
                        .product__char-row
                            p Тип катания
                            p Кросс-кантри
                        .product__char-row
                            p Цвет
