                        .product__char-row
                            p Размер колеса
                            p 27 дюймов
                        .product__char-row
                            p Тип корда
                            p Радиальный

                    .product__buttons
                        .product__btn-quantity
                            button −
                            input(type="number" placeholder="0" min="1" value="1")
                            button +
                        a.product__btn-order.button-style.button-style--red в корзину
                        a.product__btn-fast_order.button-style.button-style--transparent_red Купить в 1 клик

            // PRODUCT DESCRIPTION
            .product__desc

                .product__tabs.swiper(data-active="1")

                    .swiper-wrapper

                        .swiper-slide
                            p.active(data-index="1") Описание
                        .swiper-slide
                            p(data-index="2") Доставка и оплата
                        .swiper-slide
                            p(data-index="3") Доставка в регионы
                        .swiper-slide
                            p(data-index="4") Наличие в магазинах

                .product__tabs-content(data-show="1")

                    .product-desc
                        h3 Описание
